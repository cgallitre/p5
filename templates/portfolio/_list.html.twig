{% for portfolio in portfolios %}
    <div class="card border-primary mb-3 mx-1" style="max-width: 20rem;">
        <h5 class="card-header">{{ portfolio.title }}</h5>
        <div class="card-body">
            <h6 class="card-title">{{ portfolio.technology }}</h6>
        </div>
        <img style="width: 318px; display: block;" src="{{ vich_uploader_asset(portfolio, 'imageFile') }}"
            alt="Illustration du projet {{ portfolio.title}}">
        <div class="card-body">
            <p class="card-text">{{ portfolio.description | raw }}</p>
        </div>
        {% if portfolio.url %}
        <div class="card-footer text-muted">
            <a href="{{ portfolio.url }}" class="card-link" target="_blank">DÃ©monstration</a>
        </div>
        {% endif %}
    </div>
{% endfor %}