{% extends 'base.html.twig' %}

{% block title %}Portfolio{% endblock %}

{% block body %}

<div class="container">

    {% include 'partials/titlePage.html.twig' with {'titlePage' : 'Réalisations' } %}

    <div class="row mt-3">
        <!-- one ref -->
        {% for portfolio in portfolios %}
        <div class="col-md-4 mx-auto">
            <div class="card border-light mb-3">
                <h5 class="card-header">{{ portfolio.title }}</h5>
                <div class="card-body">
                    <h6 class="card-title">{{ portfolio.technology }}</h6>
                </div>
                <img style="max-height: 200px; width: 100%; display: block;" src="{{ vich_uploader_asset(portfolio, 'imageFile') }}" alt="{{ portfolio.coverImage }}">
                <div class="card-body">
                    <p class="card-text">{{ portfolio.description | raw }}</p>
                </div>
                {# <div class="card-footer text-muted">
                    <a href="{{ portfolio.url }}" class="card-link">Démonstration</a>
                </div> #}
            </div>
        </div>
        {% endfor %}
        <!-- end one ref -->
    </div>
</div>
{% endblock %}