{% extends 'base.html.twig' %}

{% block title %}Portfolio{% endblock %}

{% block body %}
<div class="container">

    {% include 'partials/titlePage.html.twig' with {'titlePage' : 'Portfolio' } %}

    <p class="text-center pb-5">
        <a href="{{ path('portfolio_create') }}" class="btn btn-primary">Ajouter une référence</a>
    </p>

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Titre</th>
                <th scope="col">Technologies</th>
                <th scope="col">URL</th>
            </tr>
        </thead>
        <tbody>
            {% for portfolio in portfolios %}
            <tr>
                <td>{{ portfolio.title }}</td>
                <td>{{ portfolio.technology }}</td>
                <td>{{ portfolio.url }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>


{% endblock %}