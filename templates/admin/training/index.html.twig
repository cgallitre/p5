{% extends 'admin/base.html.twig' %}

{% block title %}Liste des formations{% endblock %}

{% block body %}

<div class="container">
    {% include 'admin/partials/titlePage.html.twig' with { 'titlePage' : 'Formations' } %}

    <p class="text-center pb-5">
        <a href="{{ path('admin_training_new') }}" class="btn btn-primary">Ajouter une formation</a>
    </p>
    <div class="table-responsive">
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th scope="col">Nom de la formation</th>
                    <th scope="col" class="d-none d-md-table-cell">Th√®me</th>
                    <th scope="col" class="text-center">Commandes</th>
                </tr>
            </thead>
            <tbody>
                {% for training in trainings %}
                <tr>
                    <td>{{ training.title }}</td>
                    <td class="d-none d-md-table-cell">{{ training.theme.title }}</td>
                    <td class="text-center">
                        <a href="{{ path('admin_training_edit', { 'slug' : training.slug }) }}"><i
                                class="fas fa-edit fa-2x"></i></a>
                        &emsp;
                        <a href="{{ path('admin_training_delete', {'slug' : training.slug }) }}"><i
                                class="fas fa-trash fa-2x"></i></a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}