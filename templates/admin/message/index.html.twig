{% extends 'admin/base.html.twig' %}

{% block title %}Liste des messages{% endblock %}

{% block body %}

<div class="container-fluid">
    {# {% include 'admin/partials/titlePage.html.twig' with { 'titlePage' : 'Liste des messages' } %} #}

    <p class="text-right mt-3">
        <a href="{{ path('admin_message_new') }}" class="btn btn-primary">Ajouter un message</a>
    </p>
    <div class="row ml-3">

        {# Filtre #}
        <div class="col-md-3">
            <div class="card border-primary mb-3" style="max-width: 20rem;">
                <div class="card-header bg-light"><i class="fas fa-filter"></i> Filtrer</div>
                <div class="card-body">
                    {{ form_start(form) }}
                    {{ form_widget(form.project) }}
                    <br>
                    {{ form_widget(form.type) }}
                    <button class="btn btn-primary">Filtrer</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>

        {# liste des messages #}
        <div class="col-md-9">
            <div class="accordion" id="listeMessages">
                {% for message in messages %}
                <div class="card">
                    <div class="card-header bg-light" id="headingOne">
                        <h2 class="mb-0">
                            <button class="btn btn-link pl-0" type="button" data-toggle="collapse"
                                data-target="#collapse{{ message.id }}" aria-expanded="true"
                                aria-controls="collapseOne">
                                {{ message.title }}
                            </button>
                            <span class="float-right">
                                <a href="{{ path('admin_message_edit', { 'id' : message.id }) }}"><i
                                        class="fas fa-edit"></i></a>
                                &emsp;
                                <a href="{{ path('admin_message_delete', {'id' : message.id }) }}"><i
                                        class="fas fa-trash"></i></a>
                            </span>
                        </h2>
                        <span><small>de {{ message.author.fullName }} le {{ message.createdAt | date('d/m/Y') }} à
                                {{ message.createdAt | date('H\\hi') }}</small></span>
                        <p>{{ message.project.title }} | <span class="badge badge-primary">{{ message.type.title }}</span></p>
                    </div>

                    <div id="collapse{{ message.id }}" class="collapse" aria-labelledby="headingOne"
                        data-parent="#listeMessages">
                        <div class="card-body">
                            {{ message.content | raw }}
                        </div>
                    </div>
                </div>
                {% endfor %}

                {# <div class="table-responsive">
                <table class="table table-hover table-striped">
