{% extends 'admin/base.html.twig' %}

{% block title %}Liste des messages{% endblock %}

{% block body %}

<div class="container">
    {% include 'admin/partials/titlePage.html.twig' with { 'titlePage' : 'Liste des messages' } %}

    <p class="text-center pb-5">
        <a href="{{ path('admin_message_new') }}" class="btn btn-primary">Ajouter un message</a>
    </p>
    <div class="table-responsive">
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Date</th>
                    <th scope="col">Objet</th>
                    <th scope="col">De</th>
                    <th scope="col" width="100px">Commandes</th>
                </tr>
            </thead>
            <tbody>
                {% for message in messages %}
                <tr>
                    <td>{{ message.id }}</td>
                    <td>{{ message.createdAt | date('d/m/Y') }}</td>
                    <td>{{ message.title }}</td>
                    <td>{{ message.author.fullName }}</td>
                    {# {% if (app.user and app.user == message.author) %} #}
                    <td class="text-center">
                        <a href="{{ path('admin_message_edit', { 'id' : message.id }) }}"><i
                                class="fas fa-file fa-2x"></i></a>
                        &emsp;
                        <a href="{{ path('admin_message_delete', {'id' : message.id }) }}"><i
                                class="fas fa-trash fa-2x"></i></a>
                    </td>
                    {# {% endif %} #}
                </tr>
                {% endfor %}
            </tbody>
        </table>
        <div class="d-flex justify-content-center mt-5">
            <ul class="pagination">
                <li class="page-item {% if page == 1 %}disabled{% endif %}">
                    <a class="page-link" href="{{ path('admin_message_index', {'page' : page - 1 } )}}">&laquo;</a>
                </li>
                {% for i in 1..pages %}
                <li class="page-item {% if page == i %}active{% endif %}">
                    <a class="page-link" href="{{ path('admin_message_index', {'page' : i } )}}">{{ i }}</a>
                </li>
                {% endfor %}
                <li class="page-item {% if page == pages %}disabled{% endif %}">
                    <a class="page-link" href="{{ path('admin_message_index', {'page' : page + 1 } )}}">&raquo;</a>
                </li>
            </ul>
        </div>
    </div>
</div>
{% endblock %}