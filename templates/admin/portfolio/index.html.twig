{% extends 'admin/base.html.twig' %}

{% block title %}Portfolio{% endblock %}

{% block body %}
<div class="container-fluid">

    {% include 'admin/partials/titlePage.html.twig' with {'titlePage' : 'Portfolio' } %}

    <p class="text-center pb-5">
        <a href="{{ path('admin_portfolio_new') }}" class="btn btn-primary">Ajouter une référence</a>
    </p>
    <div class="table-responsive-md">
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th scope="col">Titre</th>
                    <th scope="col" class="d-none d-md-table-cell">Technologies</th>
                    <th scope="col" class="d-none d-md-table-cell">URL</th>
                    <th scope="col" class="d-none d-md-table-cell">Ordre</th>
                    <th scope="col" class="d-none d-md-table-cell">Publié</th>
                    <th scope="col" width="100px">Commandes</th>
                </tr>
            </thead>
            <tbody>
                {% for portfolio in portfolios %}
                <tr>
                    <td>{{ portfolio.title }}</td>
                    <td class="d-none d-md-table-cell">{{ portfolio.technology }}</td>
                    <td class="d-none d-md-table-cell">{{ portfolio.url }}</td>
                    <td class="d-none d-md-table-cell">{{ portfolio.screenOrder }}</td>
                    <td class="d-none d-md-table-cell">{{ portfolio.published }}</td>
                    {# <td class="d-none d-md-table-cell"><img src="{{ vich_uploader_asset(portfolio, 'imageFile') }}" alt="{{ portfolio.coverImage }}"></td> #}
                    <td class="text-center">
                        <a href="{{ path('admin_portfolio_edit', { 'id' : portfolio.id }) }}">
                            <i class="fas fa-edit"></i>
                        </a>
                        &emsp;
                        <a href="{{ path('admin_portfolio_delete', {'id' : portfolio.id }) }}">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>


{% endblock %}