{% extends 'admin/base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}
<div class="container">

    {% include 'admin/partials/titlePage.html.twig' with {'titlePage' : 'Catégories' } %}
    <p class="text-center">
        <a href="{{ path('admin_category_new') }}" class="btn btn-primary">Ajouter une catégorie</a>
    </p>

    <div class="table-responsive">
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th scope="col">Catégorie</th>
                    <th scope="col">Order d'apparition</th>
                    <th scope="col" width="100px">Commandes</th>
                </tr>
            </thead>
            <tbody>
                {% for category in categories %}
                <tr class="table-light">
                    <td>{{ category.title }}</td>
                    <td>{{ category.screenOrder }}</td>
                    <td>
                        <a href="{{ path('admin_category_edit', { 'id' : category.id }) }}">
                            <i class="fas fa-edit fa-2x"></i>
                        </a>
                        &emsp;
                        <a href="{{ path('admin_category_delete', {'id' : category.id }) }}">
                            <i class="fas fa-trash fa-2x"></i>
                        </a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{% endblock %}