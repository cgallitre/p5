{% extends 'base.html.twig' %}

{% block title %}Gestion de fichiers!{% endblock %}

{% block body %}
<div class="container">
    <div class="container">
        {% include 'admin/partials/titlePage.html.twig' with {'titlePage' : 'Ajouter un fichier' } %}

        {{ form_start(form) }}

        <div class="">
            {{ form_row(form.uploadFile) }}
        </div>


        <p class="text-center">
            <button type="submit" class="btn btn-primary">Ajouter le fichier</button>
        </p>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.min.js"></script>
<script>
    $(document).ready(function () {
        bsCustomFileInput.init()
    })
</script>
{% endblock %}