{% extends 'base.html.twig' %}

{% block title %}Gestion de fichiers!{% endblock %}

{% block body %}
<div class="container">
    <div class="container">
        {% include 'admin/partials/titlePage.html.twig' with {'titlePage' : 'Ajouter un fichier' } %}

        {{ form_start(form) }}

        <div class="">
            {{ form_row(form.uploadFile) }}
        </div>


        <p class="text-center">
            <button type="submit" class="btn btn-primary">Ajouter le fichier</button>
        </p>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
{% block javascripts %}
<script>
    $('.custom-file-input').on('change', function (event) {
        var inputFile = event.currentTarget;
        $(inputFile).parent()
            .find('.custom-file-label')
            .html(inputFile.files[0].name);
    });
</script>
{% endblock %}