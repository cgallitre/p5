{% extends 'base.html.twig' %}

{% block title %}Connexion Ã  votre compte{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-3">&nbsp;</div>
        <div class="col-md-6">
            <div class="bg-light p-3 m-5 rounded">
            <h2 class="my-3">
                <i class="fas fa-lock mr-3"></i>
                Authentification
            </h2>
            {% if hasError %}
                <div class="alert alert-danger">Erreur de connexion : l'email ou le mot de passe est incorrect.</div>
            {% endif %}
                <form action="{{ path('account_login') }}" method="post">
                    <div class="form-group">
                        {# <label for="email">Email</label> #}
                        <input type="text" name="_username" id="email" class="form-control"
                            placeholder="Saisir votre email" required value="{{ username }}">
                    </div>
                    <div class="form-group">
                        {# <label for="password">Mot de passe</label> #}
                        <input type="password" name="_password" id="password" class="form-control"
                            placeholder="Saisir votre mot de passe" required>
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary my-3">Se connecter</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}