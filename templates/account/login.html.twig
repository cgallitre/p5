{% extends 'base.html.twig' %}

{% block title %}Connexion Ã  votre compte{% endblock %}

{% block body %}
<div class="row justify-content-center m-0">
    <div class="col-auto">
        <div class="bg-light p-3 mt-5 rounded">
            <h2 class="h3 mt-3 mb-5">
                <i class="fas fa-lock mr-3"></i>
                Authentification
            </h2>
            {% if hasError %}
            <div class="alert alert-danger">Erreur de connexion : l'email ou le mot de passe est incorrect.</div>
            {% endif %}
            <form action="{{ path('account_login') }}" method="post">
                <div class="form-group">
                    <input type="text" name="_username" id="email" class="form-control" placeholder="Saisir votre email"
                        required value="{{ username }}">
                </div>
                <div class="form-group">
                    <input type="password" name="_password" id="password" class="form-control"
                        placeholder="Saisir votre mot de passe" required>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary my-3">
                        <i class="fas fa-lock-open mr-3"></i>
                        Se connecter
                    </button>
                    <a href="{{ path('homepage') }}" class="btn btn-link float-right my-3">
                        <i class="fas fa-arrow-circle-left"></i>
                        Retour au site</a>
                </div>
            </form>
        </div>
    </div>
</div>

{% endblock %}