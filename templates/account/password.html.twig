{% extends 'base.html.twig' %}

{% block title %}
    Modification du mot de passe
{% endblock %}

{% block body %}
<div class="container">
    {% include 'partials/titlePage.html.twig' with { 'titlePage' : 'Modification du mot de passe' } %}
