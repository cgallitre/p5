{% extends 'base.html.twig' %}

{% block title %}
Formateur développeur à Tours (37)
{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="/css/animations.css">
{% endblock %}

{% block body %}

<div class="col p-0 p-0">
    <!-- slider -->
    <div class="row vw-100 vh-100" id="slider">
        <div class="col text-center pt-5">
            <h1 class="display-5 pt-5 reveal-1">Formateur développeur</h1>
            <p class="lead reveal-2">"Rendre les technologies accessibles"</p>
            <br>
            <p class="reveal-3">Formations et sites web sur mesure</p>
            <br>
            <p class="text-center reveal-4">
                <a class="btn btn-primary btn-lg" href="#services_homepage" role="button">Offre de services</a>
            </p>
        </div>
    </div>
    <!-- end slider -->

    <!-- Services -->
    <div class="row my-5 py-5 vw-100" id="services_homepage">
        <div class="col mx-3">
            <div class="row">
                <div class="col">
                    <h2 class="mt-5 text-center display-5">Offre de services</h2>
                    <p class="title-line">
                        <span class="fa-stack">
                            <i class="fas fa-circle  fa-stack-2x icones-blanc"></i>
                            <i class="fas fa-circle fa-stack-1x"></i>
                        </span>
                    </p>
                    <hr>
                </div>
            </div>
            <div class="row mt-3 justify-content-around">
                <!-- image -->
                <div class="col-md-5 mb-3 reveal-1 text-center">
                    <img src="/img/services.jpg" alt="Formateur développeur devant son bureau" class="img-fluid">
                </div>
                <!-- Description dev-formation -->
                <div class="col-md-5 reveal-2">
                    <!-- Service Développement-->
                    <!-- Logo -->
                    <div class="row mb-3">
                        <div class="col-md-3 text-center d-none d-md-block">
                            <span class="fa-stack fa-2x align-top">
                                <i class="far fa-circle fa-stack-2x icones-gris"></i>
                                <i class="far fa-circle fa-stack-1x icones-blanc"></i>
                                <i class="fas fa-file-code fa-stack-1x icones-orange"></i>
                            </span>
                        </div>
                        <!-- Développement contenu textuel-->
                        <div class="col-md-9">
                            <h3>Développement</h3>
                            <p>Application web ou de bureau ? Vous avez le choix. Les sites sont généralement
                                développés
                                avec PHP/Symfony et les applications de gestion avec Windev ou Excel VBA.
                            </p>
                            <p class="lead text-center py-3 reveal-3">
                                <a class="btn btn-primary text-center" href="{{ path('homepage') }}#portfolio_homepage">
                                    Exemples de réalisations</a>
                            </p>
                        </div>
                    </div>
                    <!-- Service Formation -->
                    <!-- Logo -->
                    <div class="row mb-3">
                        <div class="col-md-3 text-center d-none d-md-block">
                            <span class="fa-stack fa-2x align-top">
                                <i class="far fa-circle fa-stack-2x icones-gris"></i>
                                <i class="far fa-circle fa-stack-1x icones-blanc"></i>
                                <i class="fas fa-user-graduate fa-stack-1x icones-orange"></i>
                            </span>
                        </div>
                        <!-- Formaton contenu textuel-->
                        <div class="col-md-9">
                            <h3>Formation</h3>
                            <p>Pour un centre de formation ou pour une entreprise, je propose des
                                formations en bureautique avancée et développement web.</p>
                            <p class="lead text-center py-3 reveal-3">
                                <a class="btn btn-primary text-center"
                                    href="{{ path('homepage') }}#testimonial_homepage">Témoignages</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Services -->

    <!-- Portfolio -->
    <div class="row my-5 py-5 vw-100" id="portfolio_homepage">
        <div class="col">
            <div class="row">
                <div class="col">
                    <h2 class="mt-5 text-center display-5">Réalisations</h2>
                    <p class="title-line">
                        <span class="fa-stack">
                            <i class="fas fa-circle fa-stack-2x icones-blanc"></i>
                            <i class="fas fa-circle fa-stack-1x"></i>
                        </span>
                    </p>
                    <hr>
                </div>
            </div>
            <!-- end of section title -->
            <div class="row mt-3 px-5 justify-content-around reveal-1">
                <!-- one ref -->
                {% for portfolio in portfolios %}
                <div class="col-md-4-offset">
                    <div class="card border-light mb-3" style="max-width: 20rem;">
                        <h5 class="card-header">{{ portfolio.title }}</h5>
                        <div class="card-body">
                            <h6 class="card-title">{{ portfolio.technology }}</h6>
                        </div>
                        <img style="height: 200px; width: 100%; display: block;" src="{{ portfolio.coverImage }}"
                            alt="Illustration du projet {{ portfolio.title}}">
                        <div class="card-body">
                            <p class="card-text">{{ portfolio.description | raw }}</p>
                        </div>
                        {% if portfolio.url %}
                        <div class="card-footer text-muted">
                            <a href="{{ portfolio.url }}" class="card-link">Démonstration</a>
                        </div>
                        {% endif %}
                    </div>
                </div>
                {% endfor %}
                <!-- end one ref -->
            </div>
            <p class="lead text-center py-3 reveal-2">
                <a class="btn btn-primary text-center" href="{{ path('portfolio_index') }}">En découvrir
                    plus...</a>
            </p>
        </div>
    </div>
    <!-- End Portfolio -->

    <!-- Testimonials -->
    <div class="row my-5 py-5 vw-100 vh-100" id="testimonial_homepage">
        <div class="col mx-3">
            <div class="row">
                <div class="col">
                    <h2 class="mt-5 text-center display-5">Témoignages</h2>
                    <p class="title-line">
                        <span class="fa-stack">
                            <i class="fas fa-circle  fa-stack-2x icones-blanc"></i>
                            <i class="fas fa-circle fa-stack-1x"></i>
                        </span>
                    </p>
                    <hr>
                </div>
            </div>
            <div class="row">
                <!-- Carousel -->
                <div id="carouselTestimonials" class="carousel slide reveal-1" data-ride="carousel">
                    <div class="carousel-inner d-flex">
                        {% for testimonial in testimonials %}
                        <div class="carousel-item text-center {% if loop.first %}active{% endif %}">
                            <p class="text-left">
                                <i class="fas fa-quote-left fa-2x"></i>
                            </p>
                            <p>{{ testimonial.content | raw }}</p>
                            <p class="text-right">
                                <i class="fas fa-quote-right fa-2x"></i>
                            </p>
                            <p class="text-right"><strong>{{ testimonial.author }}</strong></p>
                        </div>
                        {% endfor %}
                        <a class="carousel-control-prev" href="#carouselTestimonials" role="button" data-slide="prev">
                            <i style="font-size: 60px; color: #E95420;" class="fas fa-arrow-alt-circle-left"></i>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselTestimonials" role="button" data-slide="next">
                            <i style="font-size: 60px; color: #E95420;" class="fas fa-arrow-alt-circle-right"></i>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                    <!-- end Carousel -->
                </div>
            </div>
            <p class="lead text-center py-3 reveal-3">
                <a class="btn btn-primary text-center" href="{{ path('training_index') }}">Programme de formations</a>
            </p>
        </div>
    </div>
    <!-- End testimonials -->
</div>
{% endblock %}

{% block javascripts %}
<script src="/js/animations.js"></script>
{% endblock %}