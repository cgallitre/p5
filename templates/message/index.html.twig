{% extends 'base.html.twig' %}

{% block title %}Page de {{ user.fullName }}{% endblock %}

{% block body %}

<div class="container-fluid js-filter">

    <p class="text-right mt-3">
        <a href="{{ path('message_new') }}" class="btn btn-primary"><i class='fas fa-plus-circle'></i> Ajouter un message</a>
    </p>

    <div class="row">

        {# Filtre #}
        <div class="col-md-3 js-filter-form d-none d-md-block">
            {% include 'message/_filter.html.twig' with {'form' : form }%}
        </div>

        {# liste des messages #}
        <div class="col-md-9">
            <div class="accordion js-filter-content" id="listeMessages">
                {% include 'message/_messages.html.twig' with {'messages' : messages} %}
            </div>
        </div>

        {# Pagination #}
        <div class="navigation mt-3 mx-auto js-filter-pagination">
            {{ knp_pagination_render( messages ) }}
        </div>
    </div>
</div>
{% endblock %}